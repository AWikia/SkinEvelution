<li role="navigation" id="{{id}}" class="cpe-dropdown-level-2 {{class}}" title="{{html-tooltip}}"
    aria-labelledby="{{id}}-label">
    <a>
    <span id="{{id}}-label" {{{html-user-language-attributes}}}>{{label}}</span>
				<span class="cpe-icon cpe-icon-tiny cpe-icon-large cpe-dropdown-chevron material-icons-outlined">
					expand_more
				</span>
    </a>
    <div class="mw-portlet-body cpe-dropdown-level-2__content">
        <ul class="cpe-list cpe-is-linked" {{{html-user-language-attributes}}}>
            {{{html-items}}}
        </ul>
        {{{html-after-portal}}}
    </div>
</li>
