	"AutoloadClasses": {
		"EvelutionSocialProfile": "SkinEvelution.php",
		"SkinEvelution": "SkinEvelution.php"
	},
	"config": {
		"EvelutionLeftPersonalLinks": {
			"value": false,
			"description": "Moves upper personal links to the left"
		},
		"EvelutionDisableColorManagement": {
			"value": false,
			"description": "Disables all color-related settings"
		},
		"EvelutionForceOneHeader": {
			"value": false,
			"description": "On Desktops, disables the static community header and forces the sticky community header to appear at all times"
		},
		"EvelutionDisableRightRail": {
			"value": false,
			"description": "Disables Evelution's right rail completely"
		},
		"EvelutionServerMode": {
			"value": false,
			"description": "Switches the layout to be more server-friendly."
		},
		"EvelutionCustomFont": {
			"value": "",
			"description": "Sets the additional font to be used on Evelution."
		},
		"EvelutionStickyRail": {
			"value":true,
			"description": "Enables sticky behavior of right rail when needed."
		},
		"EvelutionForceFullWidth": {
			"value":false,
			"description": "Forces the full width mode of Evelution to all users and breakpoints."
		},
		"EvelutionDisableRightRailFromSpecificPages": {
			"value":[],
			"description": "Disables Evelution's right rail from specific pages. $wgEvelutionDisableRightRail must be set to false in order for this to have effect."
		}

	},
