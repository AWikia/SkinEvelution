{
  "name": "Evelution",
  "version": "5.2.0",
  "namemsg": "skinname-evelution",
  "descriptionmsg": "evelution-skin-desc",
  "url": "https://www.mediawiki.org/wiki/Skin:Evelution",
  "author": [
    "HM100",
    "Supporters",
    "Translators",
    "..."
  ],
  "type": "skin",
  "requires": {
    "MediaWiki": ">= 1.36.0"
  },
  "license-name": "GPL-3.0-or-later",
  "manifest_version": 2,
	"AutoloadClasses": {
		"SkinEvelution": "SkinEvelution.php",
		"EvelutionHooks": "SkinEvelution.php"
	},
	"config": {
		"EvelutionLeftPersonalLinks": {
			"value": false,
			"description": "Moves upper personal links to the left"
		},
		"EvelutionDisableColorManagement": {
			"value": false,
			"description": "Disables all color-related settings"
		},
		"EvelutionForceOneHeader": {
			"value": false,
			"description": "On Desktops, disables the static community header and forces the sticky community header to appear at all times"
		},
		"EvelutionDisableRightRail": {
			"value": false,
			"description": "Disables Evelution's right rail completely"
		},
		"EvelutionServerMode": {
			"value": false,
			"description": "Switches the layout to be more server-friendly."
		}
	},
	"Hooks": {
		"ResourceLoaderGetConfigVars": "EvelutionHooks::onResourceLoaderGetConfigVars"
	},
  "ValidSkinNames": {
    "evelution": {
      "class": "SkinEvelution",
      "args": [
        {
          "name": "Evelution",
          "responsive": true,
          "templateDirectory": "skins/Evelution/templates/",
          "messages": [
            "eve-theme",
            "eve-themes",
            "eve-explore",
            "eve-themes",
            "eve-togglesize",
            "eve-pages",
            "eve-files",
            "eve-edits",
            "eve-users",
            "eve-newfiles",
            "eve-darkmode",
            "eve-lightmode",
            "eve-variants",
            "eve-support",
            "eve-documentation",
            "eve-standard",
            "eve-visual-styles",
            "eve-visual-colors",
            "eve-color-filters",
            "eve-filter-invert",
            "eve-filter-night",
            "eve-filter-gray",
            "eve-filter-darkgray",
            "eve-filter-yelblk",
            "eve-filter-bluwht",
            "eve-activity-module",
            "eve-about-module-info",
            "moredotdotdot",
            "show",
            "hide",
            "sitetitle",
            "searchsuggest-search",
            "search",
            "otherlanguages",
            "tagline",
            "whatlinkshere",
            "log",
            "specialpages",
            "upload",
            "personaltools",
            "pageinfo-toolboxlink",
            "history",
            "randompage",
            "recentchanges",
            "otherlanguages",
            "namespaces",
            "mediastatistics-header-video",
            "navigation",
            "notifications",
            "changecontentmodel",
            "edit",
            "aboutsite",
            "longpages",
            "unusedtemplates",
            "apisandbox",
            "allmessages"
          ],
          "styles": [
            "skins.evelution.styles",
            "mediawiki.ui.icon",
            "mediawiki.ui.button"
          ],
          "scripts": [
            "skins.evelution"
          ]
        }
      ]
    }
  },
  "MessagesDirs": {
    "Evelution": [
      "i18n"
    ]
  },
  "ResourceFileModulePaths": {
    "localBasePath": "",
    "remoteSkinPath": "Evelution"
  },
  "ResourceModules": {
    "skins.evelution.styles": {
      "class": "ResourceLoaderSkinModule",
      "features": {
        "normalize": true,
        "elements": true,
        "content-tables": true,
        "content-links": true,
        "content-thumbnails": true,
        "interface-category": true,
        "toc": true
      },
      "targets": [
        "desktop",
        "mobile"
      ],
      "styles": [
        "resources/CPE.css",
        "resources/Evelution.css",
        "resources/EvelutionServer.css",
        "resources/Breakpoints.css",
        "resources/Headroom.css",
        "resources/Visual Styles & Colors.css",
        "resources/OOUI.css",
        "resources/Icons.css"
      ]
    },
    "skins.evelution": {
      "targets": [
        "desktop",
        "mobile"
      ],
      "packageFiles": [
        "resources/config.js"
      ]
    }

  }
}